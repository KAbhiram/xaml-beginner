<Page
    x:Class="ResourcesHandsOn.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ResourcesHandsOn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <x:String x:Key="Greeting" >Hello</x:String>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Margin" Value="50"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock VerticalAlignment="Center"
                   Text="{StaticResource Greeting}"/>

        <Border HorizontalAlignment="Right">
            <Border.Resources>
                <x:String x:Key="Greeting">Goodbye</x:String>
            </Border.Resources>
            <TextBlock Text="{StaticResource Greeting}"/>
        </Border>
    </Grid>
</Page>
